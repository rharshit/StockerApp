<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="tickerData"
            type="com.rharshit.stocker.data.TickerData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/tv_ticker_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{tickerData.symbol}"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_ticker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{tickerData.name}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ticker_symbol" />

        <TextView
            android:id="@+id/tv_ticker_ltp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{`LTP: ` + tickerData.ltpString}"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ticker_symbol" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
